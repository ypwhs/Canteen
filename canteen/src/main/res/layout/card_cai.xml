<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/cai_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#7cc062">

        <Button
            android:id="@+id/cai_button_add"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:onClick="cai_add"
            android:text="+" />

        <ImageView
            android:id="@+id/cai_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cai_button_add"
            android:src="@drawable/food_rating_bar_full" />

        <TextView
            android:id="@+id/cai_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cai_imageview"
            android:layout_toRightOf="@+id/cai_imageview"
            android:text="TextView" />

        <TextView
            android:id="@+id/cai_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cai_name"
            android:layout_toRightOf="@+id/cai_imageview"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/star1" />
    </RelativeLayout>

    <View
        android:id="@+id/cai_xian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/cai_relativelayout"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:background="#aeaeae" />

</RelativeLayout>