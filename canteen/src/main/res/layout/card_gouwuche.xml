<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E2E1E1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF">

        <com.gc.materialdesign.views.CheckBox
            android:id="@+id/gouwuche_checkbox"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            />

        <ImageView
            android:id="@+id/guowuche_head"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_toRightOf="@+id/gouwuche_checkbox"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/head"/>

        <TextView
            android:id="@+id/gouwuche_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/guowuche_head"
            android:text="Name"/>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/guowuche_head"
            android:layout_marginTop="8dp"
            android:id="@+id/view"/>

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="-"
            android:id="@+id/gouwuche_jian"
            android:layout_above="@+id/view"
            android:layout_alignLeft="@+id/gouwuche_name"
            android:layout_alignStart="@+id/gouwuche_name"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_above="@+id/view"
            android:layout_toRightOf="@+id/gouwuche_jian"
            android:layout_toEndOf="@+id/gouwuche_jian"
            android:text="1"/>

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="+"
            android:id="@+id/gouwuche_jia"
            android:layout_above="@+id/view"
            android:layout_toRightOf="@+id/editText"
            android:layout_toEndOf="@+id/editText"/>
    </RelativeLayout>

</RelativeLayout>