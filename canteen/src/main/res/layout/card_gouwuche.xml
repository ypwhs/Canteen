<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gouwuche_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E1E1">

    <RelativeLayout
        android:id="@+id/gouwuche_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF">

        <com.gc.materialdesign.views.CheckBox
            android:id="@+id/gouwuche_checkbox"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:id="@+id/guowuche_head"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/gouwuche_checkbox"
            android:src="@drawable/head" />

        <TextView
            android:id="@+id/gouwuche_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/guowuche_head"
            android:text="Name" />


        <View
            android:id="@+id/gouwuche_kongbai"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/guowuche_head"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/gouwuche_jian"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_above="@+id/gouwuche_kongbai"
            android:layout_alignLeft="@+id/gouwuche_name"
            android:layout_alignStart="@+id/gouwuche_name"
            android:background="@drawable/gouwuche_jian"
            android:onClick="add3"
            android:text="" />

        <View
            android:id="@+id/gouwuche_topxian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignTop="@+id/gouwuche_jian"
            android:layout_toLeftOf="@+id/gouwuche_jia"
            android:layout_toRightOf="@+id/gouwuche_jian"
            android:background="#000000" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/gouwuche_jian"
            android:layout_alignTop="@+id/gouwuche_jian"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/gouwuche_jian"
            android:background="#FFFFFF"
            android:gravity="center_vertical|center_horizontal"
            android:inputType="number"
            android:text="1" />

        <View
            android:id="@+id/gouwuche_bottomxian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/gouwuche_jian"
            android:layout_toLeftOf="@+id/gouwuche_jia"
            android:layout_toRightOf="@+id/gouwuche_jian"
            android:background="#000000" />

        <Button
            android:id="@+id/gouwuche_jia"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gouwuche_jian"
            android:layout_alignTop="@+id/gouwuche_jian"
            android:layout_toEndOf="@+id/editText"
            android:layout_toRightOf="@+id/editText"
            android:background="@drawable/gouwuche_jia"
            android:onClick="add4" />

        <TextView
            android:id="@+id/gouwuche_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/gouwuche_delete"
            android:layout_alignRight="@+id/gouwuche_delete"
            android:layout_marginBottom="8dp"
            android:text="ï¿¥: 25.00" />

        <Button
            android:id="@+id/gouwuche_delete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_above="@+id/gouwuche_kongbai"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/gouwuche_delete" />

    </RelativeLayout>

</RelativeLayout>